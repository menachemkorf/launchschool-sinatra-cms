<ul>
  <% @files.each do |file| %>
    <li>
      <a href="/<%= file %>"><%= file %></a>
      <a href="/<%= file %>/edit">Edit</a>
      <form class="inline" action="/<%= file %>/delete" method="post">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% end %>
</ul>

<a href="/new">New Document</a>

<% if !@username %>
  <form action="/users/signin" method="get">
    <button type="submit">Sign In</button>
  </form>
<% else %>
  <div>You are signed in as <%= @username %>.
    <form class="inline" action="/users/signout" method="post">
      <button type="submit">Sign Out</button>
    </form>
  </div>
<% end %>
